@model Product

<h1>Add a New Product</h1>

<form asp-action="submitproduct" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger font-weight-light" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
        <span class="text-danger font-weight-light" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input step="0.01" class="form-control" asp-for="Price">
        <span class="text-danger font-weight-light" asp-validation-for="Price"></span>
    </div>
    <input class="btn btn-primary form-control" value="Create" type="submit">
</form>