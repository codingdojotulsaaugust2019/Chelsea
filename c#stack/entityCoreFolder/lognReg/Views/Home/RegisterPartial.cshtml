@model User
<div class="container border border-dark d-inline-block col-lg-5 p-2">
  <p class="font-weight-bold">REGISTER</p>
  <form asp-action="Register" asp-controller="Home" method="post">
    <ul class="list-unstyled">
      <li><span style="color:red;" asp-validation-for="FirstName"></span></li>
      <li><span style="color:red;" asp-validation-for="LastName"></span></li>
      <li><span style="color:red;" asp-validation-for="Email"></span></li>
      <li><span style="color:red;" asp-validation-for="Password"></span></li>
      <li><span style="color:red;" asp-validation-for="Confirm"></span></li>
    </ul>

    <div class="form-group">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Email">Email</label>
      <input asp-for="Email" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Password">Password</label>
      <input asp-for="Password" type="text" class="form-control">
    </div>

    <div class="form-group">
      <label asp-for="Confirm">Confirm Password</label>
      <input asp-for="Confirm" type="text" class="form-control">
    </div>

    <input type="submit" class="btn btn-primary">

  </form>

</div>
