@model CRUDelicious.Models.Dish;

@{
    ViewData["Title"] = "Home Page";
}
<a href="/">Home</a>

<h2 class="display-4">Add a New Dish!</h2>

<form asp-action="Create" asp-controller="Home" method="post">

  <div class="form-group">
    <span asp-validation-for="Name"></span>
    <label asp-for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control">
  </div>

  <div class="form-group">
    <span asp-validation-for="Chef"></span>
    <label asp-for="Chef">Chef</label>
    <input type="text" asp-for="Chef" class="form-control">
  </div>

  <div class="form-group">
    <span asp-validation-for="Tastiness"></span>
    <label asp-for="Tastiness">Tastiness</label>
    <select asp-for="Tastiness" class="form-control">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
  </div>

  <div class="form-group">
    <span asp-validation-for="Calories"></span>
    <label asp-for="Calories">Calories</label>
    <input type="number" asp-for="Calories" class="form-control">
  </div>

  <div class="form-group">
    <span asp-validation-for="Description"></span>
    <label asp-for="Description">Description</label>
    <input type="text" asp-for="Description" class="form-control">
  </div>

  <button type="submit" class="btn btn-primary">Add New Dish!</button>

</form>
