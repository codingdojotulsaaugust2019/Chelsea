@model User

@{

    Layout = Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<div class="container">

    <div class="">
        <h1 class="display-4">My Profile</h1>
    </div>
    
    <div class="row">
        <img style="width:380px;height:330px" class="img-thumbnail col-lg-4" src="@Model.ImageURL" alt="Thumbnail image">
        <div class="col-lg-6">
            <h2 class="display-4 font-weight-lighter">@Model.FirstName @Model.LastName</h2>
            <p>Interested In: @Model.InterestedIn</p>
            <p>Location: @Model.City, @Model.State</p>
            <p>My Bio: @Model.Description</p>
            <p>My Hobbies: @Model.Hobbies</p>
        </div>
    </div>

    <div class="row">
        <p>@Model.Tagline</p>
    </div>


</div>