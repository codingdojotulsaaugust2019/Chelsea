@model Message
<div class="container border rounded border-dark d-inline-block col-lg-12 align-top p-2 my-2 ml-0">
  <form asp-action="SendMessage" asp-controller="Home" method="post">

    <ul class="list-unstyled">
      <li><span style="color:red;" asp-validation-for="Content"></span></li>
    </ul>
    
    <div class="form-group">
      <label asp-for="Content">Reply:</label>
      <input asp-for="Content" type="text" class="form-control">
    </div>

      <input asp-for="SenderId" type="hidden" value="@ViewBag.Sender.UserId" class="form-control">
      <input asp-for="TargetId" type="hidden" value="@ViewBag.Target.UserId" class="form-control">

    <input type="submit" class="btn btn-primary" value="Send!">

  </form>

</div>