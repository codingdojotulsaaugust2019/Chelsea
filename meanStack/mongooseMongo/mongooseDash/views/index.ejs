    <title>Home</title>
</head>
<body>
    <div class="container">

        <h1 class="display-4">All Tarsiers</h1>
        <% for (var t of tarsiers){ %>
            <div class="container border boder-dark">
                <p class="font-weight-bold"><a href="tarsiers/<%=t._id%>">Name: <%= t.name %></a></p>
                <p>Age: <%= t.age %></p>
                <p>Gender: <%= t.gender %></p>
                <a href="/tarsiers/destroy/<%=t._id%>">DESTROY!</a>
                <a href="/tarsiers/edit/<%=t._id%>">EDIT!</a>
            </div>
        <% } %>

        <a href="/tarsiers/new">Add New Buddy</a>
    </div>
    
</body>
</html>